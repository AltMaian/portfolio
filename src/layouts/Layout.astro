---
import '../styles/global.css';

// src/layouts/Layout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Design Engineer - Saavutettavia käyttöliittymiä inhimilliseen tahtiin" />
    <link rel="icon" type="image/svg+xml" href="/favicon-altmaian.svg" />        
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=JetBrains+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    
    <title>{title}</title>
  </head>
  <body>
    <!-- Skip to main content -->
    <a href="#main-content" class="skip-link">
      Siirry sisältöön
    </a>

    <header>
      <nav class="nav-container">
        <a href="/" class="logo">
          <span class="logo-bracket">[</span>
          <span class="logo-text">altmaian</span>
          <span class="logo-bracket">]</span>
        </a>
        <ul class="nav-links">
          <li><a href="/" class="nav-link">Etusivu</a></li>
          <li><a href="/" class="nav-link">Case Studies</a></li>
          <li><a href="/" class="nav-link">Tietoja</a></li>
        </ul>
      </nav>
    </header>

    <div id="main-content">
      <slot />
    </div>

    <footer>
      <div class="footer-container">
        <p>&copy; {new Date().getFullYear()} altmaian.dev</p>
        <p class="footer-note">Rakennettu Astrolla. Saavutettavuus edellä.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* ============================================
     CSS Reset & Base Styles
     ============================================ */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
    background: #0a0a0f;
  }

  body {
    font-family: 'JetBrains Mono', monospace !important;
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: #0a0a0f;
    color: #e8e8ee;
  }

  #main-content {
    flex: 1;
  }

  /* ============================================
     Skip Link (Accessibility)
     ============================================ */
  .skip-link {
    position: absolute;
    top: -100px;
    left: 1rem;
    background: #06d6a0;
    color: #0a0a0f;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
    z-index: 1000;
    transition: top 0.3s;
  }

  .skip-link:focus {
    top: 1rem;
  }

  /* ============================================
     Header & Navigation
     ============================================ */
  header {
    background: rgba(10, 10, 15, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(6, 214, 160, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.25rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: 'JetBrains Mono', monospace !important;
    font-size: 1.25rem;
    font-weight: 700;
    color: #e8e8ee;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .logo-bracket {
    color: #06d6a0;
    font-size: 1.5rem;
  }

  .logo-text {
    position: relative;
  }

  .logo:hover .logo-bracket {
    color: #a855f7;
  }

  .logo:hover {
    transform: translateX(3px);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-link {
    color: #9d9daa;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
    position: relative;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #06d6a0, #a855f7);
    transition: width 0.3s ease;
  }

  .nav-link:hover,
  .nav-link:focus {
    color: #e8e8ee;
  }

  .nav-link:hover::after,
  .nav-link:focus::after {
    width: 100%;
  }

  /* Active nav link */
  .nav-link[aria-current="page"] {
    color: #06d6a0;
  }

  /* ============================================
     Footer
     ============================================ */
  footer {
    background: #0a0a0f;
    border-top: 1px solid rgba(168, 85, 247, 0.1);
    padding: 2rem 0;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    color: #9d9daa;
    font-size: 0.875rem;
  }

  .footer-note {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    opacity: 0.7;
  }

  /* ============================================
     Mobile Navigation
     ============================================ */
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .logo {
      font-size: 1.1rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }
  }

  /* ============================================
     Global Focus Styles
     ============================================ */
  *:focus-visible {
    outline: 2px solid #06d6a0;
    outline-offset: 4px;
  }

  /* ============================================
     Selection Colors
     ============================================ */
  ::selection {
    background: #a855f7;
    color: #0a0a0f;
  }

  ::-moz-selection {
    background: #a855f7;
    color: #0a0a0f;
  }
</style>
