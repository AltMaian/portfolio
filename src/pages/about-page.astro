    font-family: var(--font-display);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .approach-item p {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  /* Currently Section */
  .currently-section {
    padding: var(--spacing-lg) 0;
    background: var(--color-bg-secondary);
    position: relative;
  }

  .currently-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent-turquoise), transparent);
  }

  .currently-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .currently-content h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
    text-align: center;
  }

  .currently-content ul {
    list-style: none;
    padding: 0;
  }

  .currently-content li {
    font-family: var(--font-body);
    font-size: 1.125rem;
    line-height: 2;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
  }

  .currently-content strong {
    color: var(--color-accent-turquoise);
    font-weight: 500;
  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-xl) 0;
    position: relative;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent-purple), transparent);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-sm);
  }

  .cta-content p {
    font-family: var(--font-body);
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .cta-button {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 1.125rem;
    padding: 1rem 2rem;
    background: var(--color-accent-turquoise);
    color: var(--color-bg);
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-bottom: var(--spacing-md);
  }

  .cta-button:hover {
    background: var(--color-accent-purple);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 214, 160, 0.3);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .social-links a {
    font-family: var(--font-body);
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .social-links a:hover {
    color: var(--color-accent-turquoise);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .values-grid,
    .skills-content {
      grid-template-columns: 1fr;
    }

    .approach-item {
      padding-left: 3rem;
    }

    .approach-number {
      font-size: 1.5rem;
    }
  }

  /* Focus styles */
  a:focus-visible {
    outline: 2px solid var(--color-accent-turquoise);
    outline-offset: 4px;
  }
</style>
