<style>
  /* ============================================
     CSS Variables
     ============================================ */
  :root {
    --color-bg: #0a0a0f;
    --color-bg-secondary: #13131a;
    --color-text: #e8e8ee;
    --color-text-muted: #9d9daa;
    --color-accent-turquoise: #06d6a0;
    --color-accent-purple: #a855f7;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;
    --font-display: 'Space Mono', monospace;
    --font-body: 'JetBrains Mono', monospace;
  }

  main {
    background: var(--color-bg);
    color: var(--color-text);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  /* Hero */
  .hero {
    padding: var(--spacing-xl) 0 var(--spacing-lg);
    text-align: center;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
  }

  .highlight {
    background: linear-gradient(135deg, var(--color-accent-turquoise), var(--color-accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lead {
    font-family: var(--font-body);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
    color: var(--color-text-muted);
  }

  /* Story Section */
  .story-section {
    padding: var(--spacing-lg) 0;
    background: var(--color-bg-secondary);
    position: relative;
  }

  .story-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent-turquoise), transparent);
  }

  .story-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .story-content h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
  }

  .story-content p {
    font-family: var(--font-body);
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  /* Values Section */
  .values-section {
    padding: var(--spacing-lg) 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }

  .value-card {
    background: var(--color-bg-secondary);
    padding: var(--spacing-md);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.22);
    transition: all 0.3s ease;
  }

  .value-card:hover {
    border-color: rgba(6, 214, 160, 0.3);
    transform: translateY(-4px);
  }

  .value-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .value-card h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .value-card p {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  /* Skills Section */
  .skills-section {
    padding: var(--spacing-lg) 0;
    background: var(--color-bg-secondary);
    position: relative;
  }

  .skills-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent-purple), transparent);
  }

  .skills-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .skill-category h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent-turquoise);
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
  }

  .skill-category li {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    padding-left: 1.5rem;
    position: relative;
    margin-bottom: 0.5rem;
  }

  .skill-category li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-accent-turquoise);
  }

  .learning-note {
    background: rgba(6, 214, 160, 0.08);
    border: 1px solid rgba(6, 214, 160, 0.3);
    border-radius: 8px;
    padding: var(--spacing-md);
    max-width: 800px;
    margin: 0 auto;
  }

  .learning-note p {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
  }

  /* Approach Section */
  .approach-section {
    padding: var(--spacing-lg) 0;
  }

  .approach-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .approach-item {
    margin-bottom: var(--spacing-lg);
    padding-left: 4rem;
    position: relative;
  }

  .approach-number {
    position: absolute;
    left: 0;
    top: 0;
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-accent-purple);
    opacity: 0.5;
  }

